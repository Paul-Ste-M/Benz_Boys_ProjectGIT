<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.LineTo?>
<?import javafx.scene.shape.MoveTo?>
<?import javafx.scene.shape.Path?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmly.SongsController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: #f4f4f4;">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Song Library" />
            <BorderPane />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <!-- SplitPane for the two song lists -->
            <SplitPane dividerPositions="0.5" style="-fx-padding: 0 10 0 10;">
                <!-- Left side: All songs with search -->
                <VBox spacing="10" styleClass="songs-pane">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="searchField" promptText="Search songs..." />
                        <ComboBox fx:id="searchTypeComboBox" prefWidth="120" />

                        <Button onAction="#onSearch">
                            <graphic>
                                <StackPane>
                                    <Path stroke="black" strokeWidth="2">
                                        <elements>
                                            <MoveTo x="3" y="8" />
                                            <LineTo x="7" y="12" />
                                            <LineTo x="13" y="4" />
                                        </elements>
                                    </Path>
                                </StackPane>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Search" />
                            </tooltip>
                        </Button>
                    </HBox>

                    <ListView fx:id="allSongsList" prefHeight="300" prefWidth="350">
                        <placeholder>
                            <Label text="No songs found" />
                        </placeholder>
                    </ListView>
                </VBox>

                <!-- Right side: User's created songs -->
                <VBox spacing="10" styleClass="songs-pane">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Your Created Songs" />
                    <ListView fx:id="userSongsList" prefHeight="300" prefWidth="350">
                        <placeholder>
                            <Label text="You haven't created any songs yet" />
                        </placeholder>
                    </ListView>
                </VBox>
            </SplitPane>

            <!-- Song details box below both lists -->
            <VBox fx:id="songDetailsBox" spacing="10" style="-fx-padding: 10; -fx-alignment: center;" styleClass="song-details" visible="false">
                <Label fx:id="selectedSongLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="playButton" onAction="#onPlaySong" style="-fx-font-size: 14px; -fx-pref-width: 120; " text="Play Song" />
             <Button fx:id="printButton" onAction="#onPrintSong" style="-fx-font-size: 14px; -fx-pref-width: 120; " text="Print Song" />

                </HBox>
            </VBox>
         <HBox alignment="CENTER" spacing="40" style="-fx-padding:10; -fx-background-color:#EEE;">
            <children>
               <Button fx:id="homeBtn" onAction="#onHome" styleClass="nav-button" text="Home" />
               <Button fx:id="songsBtn" onAction="#onSongs" styleClass="nav-button" text="Songs" />
               <Button fx:id="createBtn" styleClass="nav-button" text="Create" />
               <Button fx:id="aboutBtn" onAction="#onAboutUs" styleClass="nav-button" text="About Us" />
            </children>
         </HBox>
        </VBox>
    </center>
</BorderPane>

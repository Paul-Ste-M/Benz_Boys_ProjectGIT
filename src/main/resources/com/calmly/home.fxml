<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calmly.HomeController">

  <!-- top/center keeps your existing content: -->
  <center>
    <AnchorPane prefHeight="455.0" prefWidth="600.0">
      <children>
        <Label fx:id="welcomeLabel" layoutX="14.0" layoutY="14.0" prefHeight="70.0" prefWidth="390.0" text="Hello">
          <font>
            <Font size="32.0" />
          </font>
        </Label>
      </children>
    </AnchorPane>
  </center>

  <!-- bottom navigation bar: -->
  <bottom>
    <HBox alignment="CENTER" spacing="40" style="-fx-padding:10; -fx-background-color:#EEE;">
      <children>
        <Button onAction="#onHome" styleClass="nav-button" text="Home" />
        <Button onAction="#onSongs" styleClass="nav-button" text="Songs" />
        <Button onAction="#onCreate" styleClass="nav-button" text="Create" />
        <Button onAction="#onAboutUs" styleClass="nav-button" text="About Us" />
      </children>
    </HBox>
  </bottom>
</BorderPane>
